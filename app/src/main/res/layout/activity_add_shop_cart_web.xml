<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.ztz.myjingdong.activity.AddShopCartWebActivity">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:text="商品详情"
        android:textSize="20sp"
        android:gravity="center"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#000"/>
    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/Shouye_xiangqing_simpleDeawee"
        android:layout_width="match_parent"
        android:layout_height="600dp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:id="@+id/shouye_xq_text_title"
            android:layout_width="match_parent"
            android:text="14sp"
            android:padding="15dp"
            android:layout_height="0dp"
            android:layout_weight="4"/>
        <TextView
            android:id="@+id/shouye_xq_text_name"
            android:layout_width="match_parent"
            android:text="14sp"
            android:padding="15dp"
            android:layout_height="0dp"
            android:layout_weight="4"/>
        <TextView
            android:id="@+id/shouye_xq_text_price"
            android:layout_width="match_parent"
            android:text="14sp"
            android:padding="15dp"
            android:layout_height="0dp"
            android:layout_weight="4"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="JIMI"
                android:textSize="14sp"
                android:gravity="center"/>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="进店"
                android:textSize="14sp"
                android:gravity="center"/>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="购物车"
                android:textSize="14sp"
                android:gravity="center"/>
            <TextView
                android:id="@+id/shouye_xq_addcart"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="match_parent"
                android:text="加入购物车"
                android:textSize="18sp"
                android:gravity="center"
                android:textColor="#fff"
                android:background="#F0C071"/>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="match_parent"
                android:text="立即购买"
                android:background="#DA6858"
                android:textSize="18sp"
                android:gravity="center"
                android:textColor="#fff"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
