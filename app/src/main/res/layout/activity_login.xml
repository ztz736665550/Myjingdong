<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.ztz.myjingdong.activity.LoginActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/my_image_guanbi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/my_guanbi"
            android:layout_gravity="center_vertical"
            android:padding="@dimen/margin_5dp"
            android:layout_marginLeft="5dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="京东登录"
            android:textSize="18sp"
            android:gravity="center"
            android:layout_marginRight="9dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="账号"
            android:textSize="18sp"/>
        <EditText
            android:id="@+id/my_login_zk"
            android:layout_width="0dp"
            android:layout_weight="9"
            android:layout_height="wrap_content"
            android:hint="请输入账号"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="30dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="密码"
            android:textSize="18sp"/>
        <EditText
            android:id="@+id/my_login_mima"
            android:layout_width="0dp"
            android:layout_weight="9"
            android:layout_height="wrap_content"
            android:hint="请输入密码"/>
    </LinearLayout>
    <Button
        android:id="@+id/my_btn_login"
        android:layout_marginTop="@dimen/margin_30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="登录"/>
    <TextView
        android:id="@+id/my_zhuce"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="快速注册"/>
</LinearLayout>
