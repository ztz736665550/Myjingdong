<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.ztz.myjingdong.activity.HomeActivity">

    <FrameLayout
        android:id="@+id/framelayout"
        android:layout_above="@+id/radio_group"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </FrameLayout>
    <RadioGroup
        android:id="@+id/radio_group"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true">
        <RadioButton
            android:id="@+id/radio_btn_shouye"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:button="@null"
            android:drawableTop="@drawable/shouye"
            android:gravity="center"
            android:text="首页" />
        <RadioButton
            android:id="@+id/radio_btn_fenlei"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:drawableTop="@drawable/fenlei"
            android:layout_height="match_parent"
            android:button="@null"
            android:text="分类"/>
        <RadioButton
            android:id="@+id/radio_btn_faxian"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:drawableTop="@drawable/faxian"
            android:layout_height="match_parent"
            android:button="@null"
            android:text="发现"/>
        <RadioButton
            android:id="@+id/radio_btn_shopcart"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:drawableTop="@drawable/shop"
            android:layout_height="match_parent"
            android:button="@null"
            android:text="购物车"/>
        <RadioButton
            android:id="@+id/radio_btn_my"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:drawableTop="@drawable/my"
            android:layout_height="match_parent"
            android:button="@null"
            android:text="我的"/>
    </RadioGroup>
</RelativeLayout>
